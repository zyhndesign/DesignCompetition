	<script>
		$(document).ready(
				function() {
					var timer, scrollTops = [];
					function findIndex(list, value) {
						var flag = 0;
						for (var i = list.length - 1; i > 0; i--) {
							if (value >= list[i]) {
								flag = i;
								break;
							}
						}

						return flag;
					}
					$("#zyRuleTip .zyItem").click(function() {
						var targetId = $(this).find(".zyLink").data("href");
						$("#zyRuleTip .zyActive").removeClass("zyActive");
						$(this).addClass("zyActive");
						$('html,body').animate({
							scrollTop : $(targetId).offset().top
						}, 500);
					});

					$(".zySection").each(function(index, el) {
						scrollTops.push($(this).offset().top);
					});

					$(window).scroll(
							function() {
								if (timer) {
									clearTimeout(timer);
								}
								timer = setTimeout(function() {
									var index = findIndex(scrollTops,
											window.scrollY);

									$("#zyRuleTip .zyActive").removeClass(
											"zyActive");
									$("#zyRuleTip .zyItem:eq(" + index + ")")
											.addClass("zyActive");
								}, 100);
							});
				});
	</script>
